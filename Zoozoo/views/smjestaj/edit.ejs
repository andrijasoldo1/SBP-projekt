<!-- views/smjestaj/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Smještaj</title>
</head>
<body>
    <h1>Edit Smještaj</h1>
    <form action="/smjestaj/<%= smjestaj._id %>" method="post">
        <input type="hidden" name="_method" value="PUT">
        <label for="Naziv">Naziv:</label>
        <input type="text" id="Naziv" name="Naziv" value="<%= smjestaj.Naziv %>" required>
        <br>
        <label for="Kapacitet">Kapacitet:</label>
        <input type="number" id="Kapacitet" name="Kapacitet" value="<%= smjestaj.Kapacitet %>" required>
        <br>
        <label for="Podrucje">Područje:</label>
        <select id="Podrucje" name="Podrucje" required>
            <% podrucja.forEach(podrucje => { %>
                <option value="<%= podrucje._id %>" <%= smjestaj.Podrucje.equals(podrucje._id) ? 'selected' : '' %>><%= podrucje.Naziv %></option>
            <% }); %>
        </select>
        <br>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
