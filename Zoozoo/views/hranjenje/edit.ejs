        <label for="Datum_i_vrijeme">Datum i vrijeme:</label>
        <input type="datetime-local" id="Datum_i_vrijeme" name="Datum_i_vrijeme" value="<%= hranjenje.Datum_i_vrijeme %>" required>
        <br>
        <button type="submit">Update Hranjenje</button>
    </form>
</body>
</html>

