<!-- views/zaposlenici/edit.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Edit Zaposlenici</title>
</head>
<body>
    <h1>Edit Zaposlenici</h1>
    <form action="/zaposlenici/<%= zaposlenici._id %>" method="POST">
        <label for="Ime_i_prezime">Ime i Prezime:</label>
        <input type="text" id="Ime_i_prezime" name="Ime_i_prezime" value="<%= zaposlenici.Ime_i_prezime %>" required>
        <br>
        <label for="JMBG">JMBG:</label>
        <input type="text" id="JMBG" name="JMBG" value="<%= zaposlenici.JMBG %>" required>
        <br>
        <label for="Datum_rodjenja">Datum Rodjenja:</label>
        <input type="date" id="Datum_rodjenja" name="Datum_rodjenja" value="<%= zaposlenici.Datum_rodjenja %>" required>
        <br>
        <label for="Datum_zaposlenja">Datum Zaposlenja:</label>
        <input type="date" id="Datum_zaposlenja" name="Datum_zaposlenja" value="<%= zaposlenici.Datum_zaposlenja %>" required>
        <br>
        <label for="Pozicija">Pozicija:</label>
        <input type="text" id="Pozicija" name="Pozicija" value="<%= zaposlenici.Pozicija.Naziv %>" required>
        <br>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
